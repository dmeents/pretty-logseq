{
  "$schema": "https://biomejs.dev/schemas/2.3.14/schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["**/*.ts", "**/*.js", "**/*.json"]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100,
    "attributePosition": "auto"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "recommended": true
      },
      "complexity": {
        "recommended": true
      },
      "correctness": {
        "recommended": true,
        "useExhaustiveDependencies": "warn",
        "noUnusedImports": "error"
      },
      "performance": {
        "recommended": true,
        "noBarrelFile": "off"
      },
      "security": {
        "recommended": true
      },
      "style": {
        "recommended": true,
        "useImportType": "warn",
        "useNodejsImportProtocol": "off"
      },
      "suspicious": {
        "recommended": true,
        "noConsole": "off",
        "noEmptyBlock": "warn",
        "noArrayIndexKey": "warn",
        "noExplicitAny": "warn"
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": {
          "level": "on"
        }
      }
    }
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "quoteProperties": "asNeeded",
      "trailingCommas": "all",
      "semicolons": "always",
      "arrowParentheses": "asNeeded",
      "bracketSameLine": true,
      "quoteStyle": "single",
      "bracketSpacing": true
    }
  },
  "json": {
    "formatter": {
      "trailingCommas": "none"
    }
  },
  "overrides": [
    {
      "includes": ["*.ts", "*.tsx", "*.js", "*.jsx"],
      "linter": {
        "rules": {
          "style": {
            "useConst": "warn",
            "useTemplate": "warn"
          }
        }
      }
    }
  ]
}
